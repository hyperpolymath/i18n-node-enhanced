{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@polyglot/i18n",
  "version": "0.16.0",
  "exports": {
    ".": "./deno/mod.ts",
    "./core": "./deno/core.ts",
    "./plural": "./deno/plural.ts",
    "./messageformat": "./deno/messageformat.ts"
  },
  "publish": {
    "include": [
      "deno/",
      "locales/",
      "LICENSE",
      "README.adoc"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*_test.ts"
    ]
  },
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write deno/mod.ts",
    "test": "deno test --allow-read --allow-write --parallel",
    "test:watch": "deno test --allow-read --allow-write --watch",
    "test:coverage": "deno test --allow-read --allow-write --coverage=coverage",
    "coverage": "deno coverage coverage --lcov --output=coverage.lcov",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check deno/mod.ts",
    "bench": "deno bench --allow-read benchmarks/",
    "compile": "deno compile --allow-read --allow-write --output=polyglot-i18n deno/cli.ts",
    "doc": "deno doc --html --name='polyglot-i18n' deno/mod.ts",
    "cache": "deno cache --reload deno/mod.ts",
    "outdated": "deno run --allow-read --allow-net npm:npm-check-updates",
    "legacy:test": "deno task node:test",
    "node:test": "deno run --allow-read --allow-run npm:mocha --exit"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/json": "jsr:@std/json@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.0",
    "@std/toml": "jsr:@std/toml@^1.0.0",
    "@messageformat/core": "npm:@messageformat/core@^3.4.0",
    "make-plural": "npm:make-plural@^7.4.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "checkJs": false,
    "lib": ["deno.window", "deno.unstable"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["deno/", "*.ts"],
    "exclude": ["node_modules/", "lib/", "*.bs.js"]
  },
  "lint": {
    "include": ["deno/"],
    "exclude": ["node_modules/", "lib/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-await-in-loop",
        "no-const-assign",
        "no-eval",
        "no-external-import",
        "no-implicit-declare-namespace-export",
        "no-non-null-assertion",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "prefer-ascii",
        "single-var-declarator",
        "verbatim-module-syntax"
      ],
      "exclude": ["no-explicit-any"]
    }
  },
  "test": {
    "include": ["deno/**/*_test.ts", "deno/**/*.test.ts"],
    "exclude": ["node_modules/"]
  },
  "bench": {
    "include": ["benchmarks/**/*_bench.ts", "benchmarks/**/*.bench.ts"],
    "exclude": ["node_modules/"]
  },
  "lock": "./deno.lock",
  "nodeModulesDir": "auto",
  "unstable": ["kv", "cron", "ffi"]
}
