{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@polyglot/i18n",
  "version": "2.0.0-beta",
  "exports": {
    ".": "./src/lib/es6/src/mod.res.mjs",
    "./i18n": "./src/lib/es6/src/core/I18n.res.mjs",
    "./locale": "./src/lib/es6/src/core/Locale.res.mjs",
    "./catalog": "./src/lib/es6/src/core/Catalog.res.mjs",
    "./plural": "./src/lib/es6/src/core/Plural.res.mjs",
    "./relative-time": "./src/lib/es6/src/core/RelativeTime.res.mjs"
  },
  "publish": {
    "include": [
      "src/lib/es6/",
      "wasm/pkg/",
      "locales/",
      "LICENSE.txt",
      "README.adoc"
    ],
    "exclude": [
      "**/*.test.mjs",
      "**/*_test.mjs"
    ]
  },
  "tasks": {
    "build": "cd src && rescript build",
    "build:watch": "cd src && rescript build -w",
    "clean": "cd src && rescript clean",
    "wasm:build": "cd wasm && cargo build --release --target wasm32-unknown-unknown",
    "wasm:pack": "cd wasm && wasm-pack build --target web",
    "test": "deno test --allow-read --allow-write --parallel",
    "test:watch": "deno test --allow-read --allow-write --watch",
    "test:coverage": "deno test --allow-read --allow-write --coverage=coverage",
    "coverage": "deno coverage coverage --lcov --output=coverage.lcov",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/lib/es6/src/mod.res.mjs",
    "bench": "deno bench --allow-read benchmarks/",
    "tui:build": "cd tui && gprbuild -P polyglot_tui.gpr -XMODE=release",
    "tui:spark": "cd tui && gnatprove -P polyglot_tui.gpr --level=2",
    "doc": "deno doc --html --name='polyglot-i18n' src/lib/es6/src/mod.res.mjs",
    "all": "deno task build && deno task wasm:pack && deno task tui:build"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/json": "jsr:@std/json@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.0",
    "@std/toml": "jsr:@std/toml@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window", "deno.unstable"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/lib/es6/"]
  },
  "lint": {
    "include": ["src/lib/es6/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["tests/**/*_test.mjs", "tests/**/*.test.mjs"]
  },
  "bench": {
    "include": ["benchmarks/**/*_bench.mjs", "benchmarks/**/*.bench.mjs"]
  },
  "lock": "./deno.lock",
  "unstable": ["ffi"]
}
